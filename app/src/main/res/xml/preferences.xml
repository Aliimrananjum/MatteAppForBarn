<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bare_backround">
    <PreferenceCategory android:title="Preferanser">

        <ListPreference
            android:key="question_count"
            android:title="Antall spørsmål"
            android:summary="Velg antall spørsmål du vil ha"
            android:entries="@array/question_count_entries"
            android:entryValues="@array/question_count_values"
            android:defaultValue="5"
            />

        <ListPreference
            android:key="language_preference"
            android:title="Velg Språk"
            android:summary="%s"
            android:defaultValue="no"
            android:entries="@array/language_entries"
            android:entryValues="@array/language_values" />


    </PreferenceCategory>
</PreferenceScreen>